<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Readme電子書</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <script src="~/Scripts/vue.global.js"></script>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <style>
        body {
            background-color: #fafafa;
        }

        .container {
            max-width: 1140px; /* 與 Navbar 對齊 */
            margin: 0 auto; /* 水平置中 */
        }

        /* 設置購物車和愛心圖標為 Logo 顏色 */
        .navbar i.fa-cart-plus,
        .navbar i.fa-heart {
            font-size: 20px; /* 調整圖標大小 */
            color: #7AB8B8; /* 替換成 Logo 的顏色 */
        }

        .navbar {
            border-bottom: 1px solid #ddd; /*分隔線*/
        }

        .category-bar {
            background-color: white; /* 背景色 */
            padding: 10px 0;
        }

        /* 登入按鈕樣式 */
        .btn-outline-danger.newline,
        .btn-outline-primary.newline {
            background-color: white; /* 白底 */
            color: gray; /* 字體顏色設置為灰色 */
            border-color: gray; /* 邊框顏色設置為灰色 */
        }

            .btn-outline-danger.newline:hover,
            .btn-outline-primary.newline:hover {
                background-color: #f8f9fa; /* Hover時背景變淡灰 */
                color: black; /* Hover時文字變黑 */
                border-color: gray; /* 邊框仍保持灰色 */
            }
        /*footer*/
        .footer {
            margin-top: 50px;
            padding: 15px;
            background-color: #7AB8B8; /* 背景颜色 */
            color: #ffffff; /* 字体颜色 */
        }

            .footer a {
                color: #ffffff; /* 颜色 */
                font-size: 14px; /* 调整字體大小 */
            }

                .footer a:hover {
                    text-decoration: underline; /* 鼠標停留時有下滑線 */
                }
    </style>

</head>


<body>
    <nav nav class="navbar fixed-top bg-white">
        <div class="container">
            <a class="navbar-brand" href="~/Home/Index" title="首頁"><img src="~/image/readme-high-resolution-logo-transparent.png" alt="" class="img-fluid" style="height: 50px; object-fit: contain;"></a>

            <div class="d-flex ms-2 flex-grow-1">
                <form method="get" action="/Search/Result" class="d-flex row w-100" role="search">
                    <input class="form-control col" type="search" placeholder="Search" name="keyword" id="searchInput" aria-label="Search" style="width: 400px;">
                    <button type="submit" class="btn col-auto" id="searchBtn">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>

            </div>
            <div class="d-flex ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Cart/Cart" class="ms-3" title="購物車"><i class="fa-solid fa-cart-plus picture" style="vertical-align: middle;"></i></a>
                    <a href="/Products/Favorite" class="ms-3" title="收藏列表"><i class="fa-solid fa-heart picture" style="vertical-align: middle;"></i></a>
                    <a href="@Url.Action("Logout", "Members", new { area = "" })" class="ms-3 btn btn-sm btn-outline-primary newline">登出</a>
                    <a href="@Url.Action("MemberOrderDetails", "MemberOrder", new { area = "" })" class="ms-2 btn btn-sm btn-outline-secondary newline"><i class="fa-solid fa-user"></i></a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Members", new { area = "" })" class="ms-3 btn btn-sm btn-outline-primary newline">登入</a>
                    <a href="@Url.Action("Register", "Members" +
                            "", new { area = "" })" class="ms-2 btn btn-sm btn-outline-danger newline">註冊</a>
                    <a href="@Url.Action("Login", "Members", new { area = "" })" class="ms-2 btn btn-sm btn-outline-secondary newline" title="會員中心"><i class="fa-solid fa-user"></i></a>
                }

            </div>
            @*<form class="d-flex ms-auto">
                    <a href="@Url.Action("購物車", "Members", new { area = "" ,userid=1})" class="ms-3"><i class="fa-solid fa-cart-plus picture" style="vertical-align: middle;"></i></a>
                    <a href="https://localhost:44395/Products/Favorite?userid=1" class="ms-3"><i class="fa-solid fa-heart picture" style="vertical-align: middle;"></i></a>
                    <a href="@Url.Action("Login", "Members", new { area = "" })" class="ms-3 btn btn-sm btn-outline-primary newline">登入</a>
                    <a href="@Url.Action("Register", "Members", new { area = "" })" class="ms-2 btn btn-sm btn-outline-danger newline">註冊</a>
                    <a href="@Url.Action("MemberCenter", "Members", new { area = "" })" class="ms-2 btn btn-sm btn-outline-secondary newline"><i class="fa-solid fa-user"></i></a>
                </form>*@
        </div>
        <div class="category-bar container">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <a href="~/Categories/Index" class="mx-2 text-dark text-decoration-none fw-bolder">全站分類</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="display: flex; flex-direction: column; min-height: 100vh;">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div class="d-flex align-items-center">
                <span class="text-white">&copy; 2025 Readme. All rights reserved.</span>
            </div>
            <div class="d-flex">
                <a href="#" class="text-decoration-none text-white mx-2">隱私政策</a>
                <a href="#" class="text-decoration-none text-white mx-2">服務條款</a>
            </div>
        </div>
    </footer>

</body>
</html>
